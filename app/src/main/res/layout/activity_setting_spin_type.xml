<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nan.h_app.SettingSpinType">

    <TextView
        android:id="@+id/tv_setting_spin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/tv_setting_spin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/setting_spinner"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_setting_spin"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btn_setting_spin_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="8dp"
        android:text="เรียกดู"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting_spinner" />

    <Button
        android:id="@+id/btn_setting_spin_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="เพิ่ม"
        app:layout_constraintStart_toEndOf="@+id/btn_setting_spin_01"
        app:layout_constraintTop_toBottomOf="@+id/setting_spinner" />

    <Button
        android:id="@+id/btn_setting_spin_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="8dp"
        android:text="แก้ไข"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_setting_spin_01" />

    <Button
        android:id="@+id/btn_setting_spin_04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="ลบ"
        app:layout_constraintStart_toEndOf="@+id/btn_setting_spin_03"
        app:layout_constraintTop_toBottomOf="@+id/btn_setting_spin_02" />
</android.support.constraint.ConstraintLayout>
